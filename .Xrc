#!/bin/bash

# programs on login
xfce4-volumed
nm-applet &
xbindkeys &
xbacklight -set 50 &
xmodmap -e 'clear Lock' -e 'keycode 0x42 = Escape' -e 'keycode 166 = Home' -e 'keycode 167 = End' -e "keycode 135 = Super_R";

# touchpad options
synclient PalmDetect=1 TapButton1=1 TapButton2=3

#redshift &

exec $*
